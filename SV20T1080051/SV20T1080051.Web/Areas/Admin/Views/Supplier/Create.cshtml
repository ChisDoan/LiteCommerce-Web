@using SV20T1080051.Web;
@model SV20T1080051.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp :</label><br />
                @Html.ValidationMessageFor(m => m.SupplierName,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.SupplierName, new { @class="form-control", @autofocus="autofocus"})
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label><br />
                @Html.ValidationMessageFor(m => m.ContactName,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.ContactName, new { @class="form-control"})
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label><br />
                @Html.ValidationMessageFor(m => m.Province,"", new { @style="color:#f00"})
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label><br />
                @Html.ValidationMessageFor(m => m.Address,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.Address, new { @class="form-control"})
            </div>

            <div class="form-group">
                <label>Điện thoại:</label><br />
                @Html.ValidationMessageFor(m => m.Phone,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.Phone, new { @class="form-control"})
            </div>

            <div class="form-group">
                <label>Email:</label><br />
                @Html.ValidationMessageFor(m => m.Email,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.Email, new { @class="form-control"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu
            </button>

            <a href="~/Admin/Supplier" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>