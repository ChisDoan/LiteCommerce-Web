@model SV20T1080051.DomainModels.Category
@{

}

<div class="box box-primary">
    <div class="box box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Category/Save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label><br />
                @Html.ValidationMessageFor(m => m.CategoryName,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", @autofocus="autofocus"})
            </div>

            <div class="form-group">
                <label>Chi tiết :</label><br />
                @Html.ValidationMessageFor(m => m.Description,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.Description, new { @class="form-control"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu
            </button>

            <a href="~/Admin/Category" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>