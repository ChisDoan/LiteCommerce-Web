@model SV20T1080051.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Admin/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.CategoryName</p>
            </div>

            <div class="form-group">
                <label>Chi tiết:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Description</p>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-xmark"></i>
                Xóa dữ liệu
            </button>
            <a href="~/Admin/Category" class="btn btn-default">Quay lại</a>

        </form>
    </div>
</div>