@model SV20T1080051.DomainModels.Customer
@{
    ViewBag.Title = "Xóa khách hàng";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Admin/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Họ tên khách hàng:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.CustomerName</p>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.ContactName</p>
            </div>

            <div class="form-group">
                <label>Tỉnh thành:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Province</p>
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Address</p>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Phone</p>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Email</p>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-xmark"></i>
                Xóa dữ liệu
            </button>
            <a href="~/Admin/Customer" class="btn btn-default">Quay lại</a>

        </form>
    </div>
</div>