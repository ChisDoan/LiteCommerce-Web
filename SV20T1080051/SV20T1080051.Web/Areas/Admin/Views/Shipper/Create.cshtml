@model SV20T1080051.DomainModels.Shipper
@{

}

<div class="box box-primary">
    <div class="box box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }
        <form action="~/Admin/Shipper/Save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên đơn vị giao hàng:</label><br />
                @Html.ValidationMessageFor(m => m.ShipperName,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.ShipperName, new { @class="form-control", @autofocus="autofocus"})
            </div>

            <div class="form-group">
                <label>Số điện thoại:</label><br />
                @Html.ValidationMessageFor(m => m.Phone,"", new { @style="color:#f00"})
                @Html.TextBoxFor(m => m.Phone, new { @class="form-control", @autofocus="autofocus"})
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Lưu dữ liệu
            </button>

            <a href="~/Admin/Shipper" class="btn btn-default">Quay lại</a>
        </form>
    </div>
</div>