@model SV20T1080051.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa đơn vị giao hàng";
}

<div class="box box-danger">
    <div class="box box-body">
        <form action="~/Admin/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên đơn vị giao hàng:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static" style="border-bottom:1px dotted #888888 ">@Model.Phone</p>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-xmark"></i>
                Xóa dữ liệu
            </button>
            <a href="~/Admin/Shipper" class="btn btn-default">Quay lại</a>

        </form>
    </div>
</div>